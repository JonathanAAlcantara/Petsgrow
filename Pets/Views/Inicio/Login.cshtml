
@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/Layout_Inicio_Grid.cshtml";
}

    <html>
    <head>
        <title>Ingreso</title>
        <meta charset="utf-8" />
        <link href="https://fonts.googleapis.com/css2?family=Baloo+Chettan+2:wght@400;600;800&display=swap" rel="stylesheet">

        <link href="~/Content/Login.css" rel="stylesheet" />

        <script src="~/Scripts/jquery-3.4.1.min.js"></script>
        <script src="~/Scripts/bootstrap.min.js"></script>
        <script src="~/Scripts/angular.min.js"></script>
        
    </head>

    <body ng-app="MyApp" ng-controller="MyController">


        <div class="_contenedor">

            <div class="_greetings">
                <span class="_greeting2 _font800">Bienvenido</span>
                <h1 class="_greeting _font800">Inicia sesión</h1>
            </div>

            <div class="_form-login">
                <form class="_form-position">
                    <div class="_form-element _font400">
                        <label for="exampleInputEmail1">Correo electrónico</label>
                        <input id="txtUser" type="email" class="form-control _font400" aria-describedby="emailHelp" placeholder="Ingresar correo" ng-model="usuario">
                        <small id="emailHelp" class="form-text text-muted"></small>
                    </div>
                    <div class="_form-element _font400">
                        <label for="exampleInputPassword1">Contraseña</label>
                        <div class="campo">
                            <input id="txtPassword" type="password" class="form-control _font400" placeholder="Contraseña" ng-model="password">
                            <span id="campo_span" class="_campo-span">Mostrar</span>
                        </div>
                    </div>
                    <div class="_form-element _check">
                        <input type="checkbox" class="form-check-input" id="exampleCheck1">
                        <label class="form-check-label _font" for="exampleCheck1">Recordarme</label>
                    </div>
                    <button id="btnLogin" type="submit" class="btn btn-primary _btnLogin _font400" ng-click="ValidarLogin(usuario, password)">Ingresar</button>
                    <div class="_form-element _font">
                        <a class="_space" href="@Url.Action("RecuperarContraseña", "Usuario")">¿Olvidaste tu contraseña?</a>
                    </div>
                    <div class="_register _font400">
                        <p>¿Aún no tienes cuenta?<a class="_space" href="@Url.Action("RegistroUsuario", "Usuario")">Crea una aquí</a></p>

                    </div>
                </form>
            </div>

            @*TOAST ERROR EN EL INGRESO*@
            <div role="alert" aria-live="assertive" aria-atomic="true" class="toastFracasoIngreso toast _toast" data-autohide="false">
                <div class="toast-header">
                    <img src="~/Content/Images/comprobar.png" class="rounded mr-2" alt="...">
                    <strong class="mr-auto">Erorr en el ingreso</strong>
                    <small>Notificación</small>
                    <button type="button" class="ml-2 mb-1 close" data-dismiss="toast" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="toast-body">
                    Usuario o contraseña incorrecta, por favor verifica los datos o ingresa más tarde.
                </div>
            </div>

        </div>

        


        @*MODAL CARGAR*@
        <div id="myModalLoader" class="modal fade modal-center" tabindex="-1" role="dialog" data-keyboard="false" data-backdrop="static">
            <div class="modal-dialog">
                <span class="modal-center-loading">Cargando...</span>
                <main>
                    <div class="loaders">
                        <div class="loader">
                            <div class="loader-inner ball-clip-rotate-multiple">
                                <div></div>
                                <div></div>
                                <div></div>
                            </div>
                        </div>
                    </div>
                </main>
            </div>
        </div>

        <script src="~/Scripts/Login/Login.js"></script>

    </body>
    </html>

